<aside class='sidebar-learning d-flex flex-column'>
    <header class='d-flex align-items-center'>
        <h1 class='flex-1 heading'>Nội dung khoá học</h1>
        <button class='btn border-0'>
            <i class='bi bi-x-lg'></i>
        </button>
    </header>
    <div class='body flex-1'>
        {{#each sections}}
            <div 
                class='wrapper-lessons' 
                data-toggle='collapse'
                data-target='#lessons-{{@index}}'
                aria-expanded='false'
                aria-controls='lessons-{{@index}}'
            >
                <h3 class='mb-0 title'>{{this.sectionNumber}}.
                    {{this.title}}</h3>
                <span class='desc'>
                    {{countItemCompleted ../lessons this.sectionNumber ../progress.lessonLatest}}
                    /{{countItem ../lessons "sectionNumber" this.sectionNumber}} 
                    | {{formatTime this.options.totalTime 'colon'}}
                </span>
                <button
                    type='button'
                    class='btn btn-light border-0 icon'
                >
                    <i class='bi bi-chevron-down icon-expand'></i>
                </button>
            </div>
            <div class='collapse track-steps' id='lessons-{{@index}}'>
                {{#each ../lessons }}
                    {{#if (equal ../this.sectionNumber this.sectionNumber)}}
                        <div class='wrapper-lesson-items d-flex locked' data-lesson="{{this.lessonNumber}}">
                            <div class='info-item flex-1 d-flex flex-column'>
                                <h3 class='mb-0'>{{this.lessonNumber}}. {{this.title}}</h3>
                                <p class='mb-0 action-item mt-1'>
                                    {{! <i class='bi bi-record-circle'></i> }}
                                     <i class='bi bi-play-circle'></i>
                                    {{!-- <i class='bi bi-file-earmark-ppt-fill'></i> --}}
                                    <span>{{formatTime this.options.duration 'colon'}}</span>
                                </p>
                            </div>
                            <div class='d-none icon-lock'>
                                <svg
                                    aria-hidden='true'
                                    focusable='false'
                                    data-prefix='fas'
                                    data-icon='lock'
                                    class='svg-inline--fa fa-lock _state-icon_1seu0_82 _lock_1seu0_87'
                                    role='img'
                                    xmlns='http://www.w3.org/2000/svg'
                                    viewBox='0 0 448 512'
                                ><path
                                        fill='currentColor'
                                        d='M144 144v48H304V144c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192V144C80 64.5 144.5 0 224 0s144 64.5 144 144v48h16c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80z'
                                    ></path></svg>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        {{/each}}
    </div>
</aside>
<script> 
    const progress = {{{json progress}}};
</script>